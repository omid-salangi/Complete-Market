@model AddOrRemoveClaimViewModel
@{
    ViewData["Title"] = "افزودن کاربر به Claim";
}

<h1>افزودن کاربر به Claim</h1>

@if (!Model.UserClaim.Any())
{
    <h1>یافت نشد "Claim" هیج</h1>
}
else
{
    <form asp-controller="ManageUser" asp-action="AddUserToClaim" method="post">
        <div asp-validation-summary="ModelOnly"></div>

        @for (int i = 0; i < Model.UserClaim.Count; i++)
        {
            <div class="form-group">
                <input asp-for="@Model.UserClaim[i].IsSelected" />
                <label>@Model.UserClaim[i].ClaimType</label>

                <input type="hidden" asp-for="@Model.UserClaim[i].ClaimType" />
            </div>
        }
        <input type="hidden" asp-for="@Model.UserId" />
        <button class="btn btn-primary" type="submit">اضافه کردن</button>
    </form>
}