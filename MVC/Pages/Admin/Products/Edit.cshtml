@page
@model MVC.Pages.Admin.Products.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.ImgUrl" class="control-label"></label>
                <input asp-for="Product.ImgUrl" class="form-control" />
                <span asp-validation-for="Product.ImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ShortDescription" class="control-label"></label>
                <input asp-for="Product.ShortDescription" class="form-control" />
                <span asp-validation-for="Product.ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.LongDescription" class="control-label"></label>
                <input asp-for="Product.LongDescription" class="form-control" />
                <span asp-validation-for="Product.LongDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.VisitCount" class="control-label"></label>
                <input asp-for="Product.VisitCount" class="form-control" />
                <span asp-validation-for="Product.VisitCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.BuyCount" class="control-label"></label>
                <input asp-for="Product.BuyCount" class="form-control" />
                <span asp-validation-for="Product.BuyCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
