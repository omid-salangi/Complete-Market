@page
@model MVC.Pages.Admin.Products.CreateModel

@{
    ViewData["Title"] = "ایجاد محصول";
}

<h1>ایجاد محصول</h1>

<h4>محصول</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ShortDescription" class="control-label"></label>
                <input asp-for="Product.ShortDescription" class="form-control" />
                <span asp-validation-for="Product.ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.LongDescription" class="control-label"></label>
                <input asp-for="Product.LongDescription" class="form-control" />
                <span asp-validation-for="Product.LongDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.quantityInStock" class="control-label"></label>
                <input asp-for="Product.quantityInStock" class="form-control" />
                <span asp-validation-for="Product.quantityInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ImageFile" class="control-label"></label>
                <input asp-for="Product.ImageFile" class="form-control" />
                <span asp-validation-for="Product.ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-page="Index">بازگشت به لیست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
